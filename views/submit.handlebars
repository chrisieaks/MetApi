<div class="container">
    <div class="col-md-6 col-md-offset-3">
        <h3>API Submit Form</h3>
        <form class="create-form">
            <div class="form-group">
                <label for="apiName">Name</label>
                <input type="text" class="form-control" id="apiName" name="name">
            </div>
            <div class="form-group">
                <label for="apiUrl">URL</label>
                <input type="text" class="form-control" id="apiUrl" name="url">
            </div>
            <div class="form-group">
                <label for="apiTag">Category</label>
                <input type="text" class="form-control" id="apiTag" name="tag">
            </div>
            <div class="form-group">
                <label for="apiPrice">Free or Paid?</label><br>
                <input type="radio" name="free" value="1" checked> Free<br>
                <input type="radio" name="free" value="0"> Paid
            </div>
            <div class="form-group">
                <label for="clientServer">Client Side or Server Side?</label><br>
                <input type="radio" name="clientServer" value="client" checked> Client Side<br>
                <input type="radio" name="clientServer" value="server"> Server Side
            </div>
            <button type="submit" class="btn btn-default">Add API</button>
        </form>
        <br />
    </div>
</div>